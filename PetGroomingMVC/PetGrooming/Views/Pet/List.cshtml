@model List<PetGrooming.Models.Pet>

@{
    ViewBag.Title = "List";
}

<h2>List of Pets</h2>
<div>
    <a href="/Pet/Add" class="btn btn-primary" style="float:right">Add Pet</a> <!--button to  add new pet-->
</div>
<table id="mytable" class="table table-bordred table-striped">
    <thead>
        <th>PET NAME</th>
        <th>SPECIES</th>
        <th>WEIGHT</th>
        <th>EDIT</th>
        <th>DELETE</th>
    </thead>
    <tbody>
        @{ //Rendering  loop to retrieve and display all pets in table cells
            foreach (var Pet in Model)
            {
                <tr>
                    <td><span><a href="/Pet/Show/@Pet.PetID">@Pet.PetName</a></span></td><!--Navigate to individual details page-->
                    <td><span>@Pet.Species.Name</span></td><!--Retrieve and display  species name in table cell -->
                    <td><span>@Pet.Weight</span></td><!--Retrieve and  Display pet weight in table cell-->
                    <!--Button To Update Pet-->
                    <td> <span><a href="/Pet/Update/@Pet.PetID"><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>   </a></span></td>
                    <!--Button To Delete Pet-->
                    <td><span><a href="/Pet/Delete/@Pet.PetID"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>   </a></span></td>
                </tr>
            }
        }
    </tbody>
</table>