@model List<PetGrooming.Models.Species>


@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<a href="/Species/Add" class="btn btn-primary" style="float:right">Add Species</a>
    <table id="mytable" class="table table-bordred table-striped">
        <thead>
            <th>SPECIES</th>
            <th>EDIT</th>
            <th>DELETE</th>
        </thead>
        @{ //Rendering loop to retrieve all  species and put them in table cells
            foreach (var species in @Model)
            {
                <tbody>
                    <tr>
                        <td><span><a href="/Species/Show/@species.SpeciesID">@species.Name</a></span></td>
                        <td> <span><a href="/Species/Update/@species.SpeciesID"><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>   </a></span></td>
                        <td><span><a href="/Species/Delete/@species.SpeciesID"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>   </a></span></td>
                    </tr>
                </tbody>
            }
        }
    </table>

    